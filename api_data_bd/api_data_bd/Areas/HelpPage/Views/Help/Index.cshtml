@using System.Web.Http
@using System.Web.Http.Controllers
@using System.Web.Http.Description
@using System.Collections.ObjectModel
@using api_data_bd.Areas.HelpPage.Models
@model Collection<ApiDescription>

@{
    ViewBag.Title = "API Documentation";

    // Group APIs by controller
    ILookup<HttpControllerDescriptor, ApiDescription> apiGroups = Model.ToLookup(api => api.ActionDescriptor.ControllerDescriptor);
}

<link type="text/css" href="~/Areas/HelpPage/HelpPage.css" rel="stylesheet" />

<style>
    .font-title {
        font-weight: 900;
        font-size: 6.5vh;
    }
</style>
<header class="help-page">
    <div class="container">
        <div class="text-center py-4 ">
            <h1 class="font-title">@ViewBag.Title</h1>
        </div>
    </div>
</header>



<section class="mb-5">
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <div class="d-block ">
                <div class="text-center">
                    <h3>Introduction</h3>
                </div>
                <div class="text-center">
                    Here is the all documentation of web api . You can use this api for free.
                </div>
            </div>

        </div>
    </div>
</section>


<section class="content-wrapper main-content clear-fix">
    <div class="container">
        @foreach (var group in apiGroups)
        {

            @group.Key.ControllerName
            <br />
        }

    </div>
</section>

<section class="content-wrapper main-content clear-fix">
    <div class="container">
        @foreach (var group in apiGroups)
        {
            @Html.DisplayFor(m => group, "ApiGroup")
        }

    </div>
</section>


@model api_data_bd.Models.AdminUsersRegisterBindingModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_DefaultAppLayout.cshtml";
}
@section links_cdn{
    <link href="~/Content/css/admin.css" rel="stylesheet">
}
@section content_wrapper{
    <style>
        .body-100hv {
            height: 100vh;
        }
    </style>
    <div class="container-fluid bg-dark-2">
        <div class="row body-100hv">
            <div class="col-12 my-auto">

                <div class="container text-center">
                    <h1 style="font-weight:900;">Admin Register Form</h1>
                </div>

                <div class="container col-md-6">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.UsersName, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.UsersName, new { htmlAttributes = new { @class = "form-control py-4" } })
                                @Html.ValidationMessageFor(model => model.UsersName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminUsersEmail, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.AdminUsersEmail, new { htmlAttributes = new { @class = "form-control py-4" } })
                                @Html.ValidationMessageFor(model => model.AdminUsersEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminUsersPassword, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.AdminUsersPassword, new { htmlAttributes = new { @class = "form-control py-4" } })
                                @Html.ValidationMessageFor(model => model.AdminUsersPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control py-4" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary py-2 px-5 font-weight-bold"> Register New User </button>
                            </div>
                        </div>
                    </div>
                    }

                </div>
                @*
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                *@
            </div>
        </div>
    </div>
}
@section Scripts {

}

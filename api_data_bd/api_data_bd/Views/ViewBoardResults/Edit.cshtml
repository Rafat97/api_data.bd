@model api_data_bd.Models.BoardResult

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var db = api_data_bd.Utiles.Static.AppDatabase.getInstence().getDatabase();
}




@section content_wrapper {
    <div class="container my-5 text-center">
        <h1 style="line-height: 1em;  font-weight: 900">Edit Instituition Informations</h1>
    </div>
    <div class="container-fluid">

        <div class="container bg-dark p-1 pb-4 shadow rounded mb-3 " data-aos="fade-in">

            <div class="container p-0 m-0">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="container">
                    <div class="btn btn-outline-primary mt-3 text-white-50 ml-3 mt-4">
                        <i class="fas fa-fw fa-arrow-left"></i>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "text-white-50" })
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.BoardResultId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ResultType, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.ResultType, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ResultType, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ExamAttendence, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.ExamAttendence, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ExamAttendence, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GpaFiveStudentNumber, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.GpaFiveStudentNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GpaFiveStudentNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FailStudentNumber, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.FailStudentNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FailStudentNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.InstituitionId, "InstituitionId", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.DropDownList("InstituitionId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.InstituitionId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary px-4">
                                Edit Item
                            </button>
                        </div>
                    </div>
                </div>
                }


            </div>
        </div>
    </div>
}

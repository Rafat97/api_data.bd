@model api_data_bd.Models.InstituteStatistics


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var db = api_data_bd.Utiles.Static.AppDatabase.getInstence().getDatabase();
}




@section content_wrapper {
    <div class="container my-5 text-center">
        <h1 style="line-height: 1em;  font-weight: 900">Edit Instituition Informations</h1>
    </div>
    <div class="container-fluid">

        <div class="container bg-dark p-1 pb-4 shadow rounded mb-3 " data-aos="fade-in">

            <div class="container p-0 m-0">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="container">
                        <h4>InstituteStatistics</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.InstituteStatisticsId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.InstituteStatisticsMaleTeacher, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.InstituteStatisticsMaleTeacher, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstituteStatisticsMaleTeacher, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.InstituteStatisticsFemaleTeacher, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.InstituteStatisticsFemaleTeacher, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstituteStatisticsFemaleTeacher, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.InstituteStatisticsYear, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.InstituteStatisticsYear, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstituteStatisticsYear, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.InstituteStatisticsBoysStudent, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.InstituteStatisticsBoysStudent, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstituteStatisticsBoysStudent, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.InstituteStatisticsGirlsStudent, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.InstituteStatisticsGirlsStudent, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstituteStatisticsGirlsStudent, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.InstituitionId, "InstituitionId", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownList("InstituitionId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.InstituitionId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary px-4">
                                    Edit Item
                                </button>
                            </div>
                        </div>

                    </div>
                }

            </div>
        </div>
    </div>
}
@section Scripts {

}




